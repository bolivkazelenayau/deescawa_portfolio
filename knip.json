{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "src/app/**/page.tsx",
    "src/app/**/layout.tsx",
    "src/app/**/loading.tsx",
    "src/app/**/error.tsx",
    "src/app/**/not-found.tsx",
    "src/app/globals.css",
    "next.config.js"
  ],
  "project": [
    "src/**/*.{ts,tsx,js,jsx}"
  ],
  "ignore": [
    "src/**/*.test.{ts,tsx}",
    "src/**/*.spec.{ts,tsx}",
    "src/**/*.stories.{ts,tsx}",
    "**/*.d.ts"
  ],
  "ignoreDependencies": [
    "next-image-export-optimizer",
    "compression-webpack-plugin",
    "@types/*"
  ],
  "next": true
}
